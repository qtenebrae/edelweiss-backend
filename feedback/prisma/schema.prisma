generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model History {
  id Int @id @default(autoincrement())
  movieId Int
  score Int
  numberOfEpisodes Int
  modifiedDate DateTime @default(now())
  authotId Int

  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id Int @id @default(autoincrement())
  title String

  histories History[]
}

model Comment {
  id Int @id @default(autoincrement())
  movieId Int
  text String
  publicationDate DateTime
  authotId Int
}

model Review {
  id Int @id @default(autoincrement())
  movieId Int
  header String
  text String
  score Float
  publicationDate DateTime
  authotId Int

  parameters ParameterEstimation[]
}

model Parameter {
  id Int @id @default(autoincrement())
  title String

  review ParameterEstimation[]
}

model ParameterEstimation {
  movie Review @relation(fields: [reviewId], references: [id])
  reviewId Int

  genre Parameter @relation(fields: [parametrId], references: [id])
  parametrId Int

  @@id([reviewId, parametrId])

  score Int
}


